{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "drizzle-kit push --schema src/db/schema.ts",
    "test": "poku tests --debug",
    "test:watch": "poku tests --debug --watch",
    "test:unit": "poku tests/clientBehavior.test.mjs tests/clientModel.test.mjs tests/clientValidation.test.mjs tests/paymentModel.test.mjs tests/paymentBehavior.test.mjs tests/tabModel.test.mjs tests/userModel.test.mjs --debug",
    "test:models": "poku tests/clientModel.test.mjs tests/paymentModel.test.mjs tests/tabModel.test.mjs tests/userModel.test.mjs --debug",
    "test:behavior": "poku tests/clientBehavior.test.mjs tests/clientValidation.test.mjs tests/paymentBehavior.test.mjs --debug",
    "test:integration": "node tests/integration/run-integration-tests.mjs",
    "test:integration:models": "poku tests/integration/clientModel.integration.test.mjs tests/integration/system.integration.test.mjs --debug",
    "test:integration:api": "poku tests/integration/clientAPI.integration.test.mjs tests/integration/fullAPI.integration.test.mjs tests/integration/paymentAPI.integration.test.mjs --debug",
    "test:payments": "poku tests/paymentModel.test.mjs tests/paymentBehavior.test.mjs tests/integration/paymentAPI.integration.test.mjs --debug",
    "test:all": "npm run test:unit && npm run test:integration",
    "test:poku": "node tests/integration/run-poku-tests.mjs",
    "test:poku:system": "node tests/integration/run-poku-tests.mjs --run system",
    "test:poku:api": "node tests/integration/run-poku-tests.mjs --run api",
    "test:poku:validation": "node tests/integration/run-poku-tests.mjs --run validation",
    "test:poku:list": "node tests/integration/run-poku-tests.mjs --list",
    "test:complete": "npm run test:unit && npm run test:poku"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "description": "",
  "dependencies": {
    "@neondatabase/serverless": "^1.0.1",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.44.2",
    "express": "^5.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@faker-js/faker": "^9.8.0",
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.2",
    "@types/node": "^22.15.30",
    "drizzle-kit": "^0.31.1",
    "faker": "^6.6.6",
    "nodemon": "^3.1.10",
    "poku": "^3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
